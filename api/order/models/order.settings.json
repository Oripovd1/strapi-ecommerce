{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "maxLength": 13,
      "minLength": 9,
      "required": true
    },
    "address": {
      "type": "text"
    },
    "delivery_price": {
      "type": "integer"
    },
    "comment": {
      "type": "text"
    },
    "delivery_type": {
      "type": "enumeration",
      "enum": [
        "delivery",
        "pickup"
      ]
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "order.items"
    },
    "total_price": {
      "type": "string"
    }
  }
}
